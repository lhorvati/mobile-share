/* WIZARD STYL ======================================== */

@import url('http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css')

/* Resets */
a
    text-decoration: none

/* INPUT SEARCH */
input[type="text"]
    background: transparent
    outline: none
    border: none


/* WIZARD ======================================== */
.wizard-wrap
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 100%
    height: 100%
    flexbox()
    flex-flow: column nowrap
    background: color1

    .wiz-top,
    .wiz-bot
        display: block
        width: 100%

/* WIZARD TOP ========== */
.wizard-wrap .wiz-top
    height: 56px
    flexbox()
    flex-flow: row nowrap
    justify-content: space-between
    align-items: center
    position: relative
    z-index: 1000
    background: color1
    box-shadow(shadowLvl2)

    .wiz-top__desc
        flexbox()
        align-items: center
        height: 100%
        font-size: 18px
        font-weight: 400
        padding-left: 16px
        box-sizing()
        flex: 1

    /* Icons, Buttons */
    .wiz-top__back,
    .wiz-top__next,
    .wiz-top__more,
    .wiz-top__close,
    .wiz-top__search
        flexbox()
        justify-content: center
        align-items: center
        width: 48px
        height: 48px

    .wiz-top__back
        background: url('img/back.png') no-repeat center
        background-size: 24px !important
	
    .wiz-top__close
        background: url('img/close.png') no-repeat center
        background-size: 24px !important

    .wiz-top__search
        background: url('img/explorer/find.png') no-repeat center
        background-size: 24px !important



    .wiz-top__create,
    .wiz-top__connect,
    .wiz-top__next-txt,
    .wiz-top__save
        flexbox()
        justify-content: center
        align-items: center
        height: 48px
        box-sizing()
        padding: 0 16px
        text-transform: uppercase
        font-size: 12px



/* WIZARD BOTTOM ========== */
.wizard-wrap .wiz-bot
    height: calc(100% - 56px)
    overflow: auto
    position: relative
    

    .wiz-row-list
        width: 100%
        background: color3
        box-shadow(shadowLvl2)
        box-sizing()
        padding-bottom: 20px

        /* Wizard Row */
        .wiz-row
            width: 100%
            min-height: 56px
            flexbox()
            flex-flow: row nowrap
            align-items: center
            overflow: hidden

            &.selected
                background: color1
            

            .wiz-row__icon
                flexbox()
                justify-content: center
                align-items: center
                width: 48px
                height: 48px

            .wiz-row__desc
                flexbox()
                flex-flow: column nowrap
                justify-content: center
                align-items: flex-start
                padding: 16px
                box-sizing()
                height: 100%
                flex: 1

                .wiz-row__desc--title
                    font-size: 16px
                    margin-bottom: 4px

                .wiz-row__desc--content
                    font-size: 13px




/* WIZARD FILTER ========== */
.wizard-wrap .filter
    position: relative
    flexbox()
    align-items: center
    height: 56px
    background: color3
    margin-bottom: 8px
    box-shadow(shadowLvl2)

    .filter__select
        flexbox()
        align-items: center
        height: 100%
        box-sizing()
        padding: 0 16px
        font-size: 14px

        i
            margin-left: 15px

    .filter__list
        position: absolute
        top: 56px
        background: color000
        flexbox()
        flex-flow: column nowrap
        border-radius(3px)
        box-sizing()
        padding: 5px 0
        z-index: 10

        .filter__list--item
            box-sizing()
            padding: 16px
            font-size: 14px


/* WIZARD CHECKBOX BOTTOM ========== */
/* WIZARD PUBLIC KEY BOTTOM ========== */
.wizard-wrap .checkbox-bar,
.wizard-wrap .publickey-bar
    position: relative
    flexbox()
    align-items: center
    height: 56px
    background: color3
    margin-top: 8px
    box-shadow(shadowLvl2)


    .checkbox-bar__ckbox
        flexbox()
        align-items: center
        box-sizing()
        padding: 0 10px 0 16px

    .checkbox-bar__label
        font-size: 12px

    /* Public Key link */
    .publickey-bar__link
        width: 100%

        a
            color: color7
            font-size: 12px
            text-transform: uppercase
            margin-left: 10px
            padding: 10px 16px
            box-sizing()

       





/* WIZARD ALL & CONTAINER - bottom border & padding ======================================== */
.wizard-wrap.all,
.wizard-wrap.container,
.wizard-wrap.step2

    .wiz-row-list
        padding: 0

    .wiz-row
        border-bottom: 1px solid color1
        box-sizing()


/* WIZARD CONTAINER - scroll ======================================== */
.wizard-wrap.container .wiz-bot
    height: calc(100% - 120px)

/* WIZARD GITHUB & BITBUCKET STEP 2 - scroll ======================================== */
.wizard-wrap.step2 .wiz-bot
    height: calc(100% - 184px)

/* WIZARD SFTP/SSH *PUBLIC KEY* - scroll ======================================== */
.wizard-wrap.sftp.public .wiz-bot
    height: calc(100% - 112px)



/* WIZARD DIGITAL OCEAN ======================================== */
.wizard-wrap .connection
    flexbox()
    flex-flow: column nowrap
    box-sizing()
    padding: 25px 16px


    /* Top message */
    .connection__msg
        font-size: 14px
        box-sizing()
        margin-bottom: 20px

        
    /* Icon and text */
    .connection__account
        flexbox()
        flex-flow: column nowrap
        align-items: center

        .connection__account--icon
            width: 50px
            height: 50px
            flexbox()
            justify-content: center
            align-items: center
        
        .connection__account--txt
            text-transform: uppercase
            text-align: center
            font-size: 14px



/* WIZARD SSH options ======================================== */


    #publickey
        overflow: hidden
        font-size: 12px

/* Button wizard */
.button
    flexbox()
    justify-content: center
    align-items: center
    box-sizing()
    padding: 10px
    margin-left: auto
    background: color1
    color: color4 
    font-size: 10px
    border: 0
    outline: none
    transition: all 0.5s ease
    text-transform: uppercase

    &.copy
        background: lightGreen
        color: color7


/* WIZARD Loader ======================================== */
.loader
    flexbox()
    justify-content: center
    align-items: center
    width: 100%
    height: 100%

    .loader__icon
        display: block
        width: 50px
        height: 50px
        background-image: url("img/loader/loader96@48.png")
        background-repeat: no-repeat
        background-size: 50px
        position: absolute
        top: 20%

    .loader__text
        width: 80%
        text-align: center


@-webkit-keyframes spin {
    from {
        -ms-transform: rotate(0deg)
        -moz-transform: rotate(0deg)
        -webkit-transform: rotate(0deg)
        -o-transform: rotate(0deg)
        transform: rotate(0deg)
    }
    to {
        -ms-transform: rotate(360deg)
        -moz-transform: rotate(360deg)
        -webkit-transform: rotate(360deg)
        -o-transform: rotate(360deg)
        transform: rotate(360deg)
    }
}
@keyframes spin {
    from {
        -ms-transform: rotate(0deg)
        -moz-transform: rotate(0deg)
        -webkit-transform: rotate(0deg)
        -o-transform: rotate(0deg)
        transform: rotate(0deg)
    }
    to {
        -ms-transform: rotate(360deg)
        -moz-transform: rotate(360deg)
        -webkit-transform: rotate(360deg)
        -o-transform: rotate(360deg)
        transform: rotate(360deg)
    }
}
.spin
    -webkit-animation: spin 2s linear infinite
    -moz-animation: spin 2s linear infinite
    -ms-animation: spin 2s linear infinite
    -o-animation: spin 2s linear infinite
    animation: spin 2s linear infinite








