/* SHARE DIALOG ======================================= */
.share-wrap
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 100%
    height: 100%
    flexbox()
    flex-flow: column nowrap
    background: color3

    /* Done button */
    .share-header__done
        flexbox()
        justify-content: center
        align-items: center
        height: 48px
        box-sizing()
        padding: 0 16px
        text-transform: uppercase
        font-size: 12px

	/* Input overwrite */
	input
		margin-top: 0



    /* Header Tabs is handled in "fileExplorer.styl" */
    


	.share-bot
        height: calc(100% - 56px)
        flex-flow: column nowrap
        box-sizing()
        padding: 16px

	/* Checkbox overwrite */
	.share-row .checkbox
		padding: 0
		margin-top: 10px


.share-link

	/* Share Button */
	.share-link__button
		flexbox()
		flex-flow: row nowrap
		align-items: center

		.share-link__button--icon
			margin-left: 10px
			width: 20px
			height: 20px
			background: url(img/explorer/sharelink.png) no-repeat center
			background-size: 20px





.invite-people
	margin-top: 20px


	/* Share List */
	.share-list:empty
		display: none
		margin-top: 0
	
	.share-list
		width: 100%
		flexbox()
		flex-flow: row wrap
		margin-top: 10px

		.share-list-item
			flexbox()
			flex-flow: row nowrap
			justify-content: center
			align-items: center
			min-width: 50px
			background: color1
			border: none
			border-radius(10px)
			box-sizing()
			padding: 5px 6px 5px 10px
			margin: 0 5px 5px 0

			.share-list-item__text
				font-size: 11px

			.share-list-item__icon
				width: 14px
				height: 14px
				margin-left: 6px
				background: url('img/close.png')
				background-position: center
				background-repeat: no-repeat
				background-size: 14px



/* MUI INPUT 2 */
