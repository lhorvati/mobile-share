/* LOADERS STYL */


/* Folder Loading/Empty Screen ============================== */
/* Hides all elements inside */
.child-nodes-none > div.endor-node-wrap
	display: none

.child-nodes-none > div.endor-node-child-nodes-overlay,
.child-nodes-none > div.empty-node
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	background: color2

/* Loading screen */
.child-nodes-none > div.endor-node-child-nodes-overlay
	z-index: 20

	.overlay-msg
		flexbox()
		justify-content: center
		width: 100%
		height: 100%
		margin-top: 100px

	.overlay-msg:before
		display: block
		position: absolute
		content: ''
		background: red
		width: 50px
		height: 50px
		top: 30px
		left: 50%
		margin-left: -25px

/* Empty Folder screen */	
.child-nodes-none > div.empty-node,
.empty-node
	width: 100%
	height: 100%
	z-index: 10

	.empty-msg
		flexbox()
		justify-content: center
		width: 100%
		height: 100%
		margin-top: 50px

	

/* /Folder Loading/Empty Screen ============================== */